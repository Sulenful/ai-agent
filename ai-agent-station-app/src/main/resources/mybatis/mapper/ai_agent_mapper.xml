<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lingfeng.infrastructure.dao.IAiAgentDao">

    <resultMap id="BaseResultMap" type="com.lingfeng.infrastructure.dao.po.AiAgent">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="agent_id" property="agentId" jdbcType="VARCHAR"/>
        <result column="agent_name" property="agentName" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="channel" property="channel" jdbcType="VARCHAR"/>
        <result column="strategy" property="strategy" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="TINYINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, agent_id, agent_name, description, channel, strategy, status, create_time, update_time
    </sql>

    <insert id="insert" parameterType="com.lingfeng.infrastructure.dao.po.AiAgent" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ai_agent (agent_id, agent_name, description, channel, strategy, status, create_time, update_time)
        VALUES (#{agentId}, #{agentName}, #{description}, #{channel}, #{strategy}, #{status}, #{createTime}, #{updateTime})
    </insert>

    <insert id="insertBatch" parameterType="java.util.List">
        INSERT INTO ai_agent (agent_id, agent_name, description, channel, strategy, status, create_time, update_time)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.agentId}, #{item.agentName}, #{item.description}, #{item.channel}, #{item.strategy}, #{item.status}, #{item.createTime}, #{item.updateTime})
        </foreach>
    </insert>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM ai_agent WHERE id = #{id}
    </delete>

    <delete id="deleteByCondition" parameterType="com.lingfeng.infrastructure.dao.po.AiAgent">
        DELETE FROM ai_agent
        <where>
            <if test="agentId != null and agentId != ''">
                AND agent_id = #{agentId}
            </if>
            <if test="agentName != null and agentName != ''">
                AND agent_name = #{agentName}
            </if>
            <if test="channel != null and channel != ''">
                AND channel = #{channel}
            </if>
            <if test="strategy != null and strategy != ''">
                AND strategy = #{strategy}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
    </delete>

    <update id="update" parameterType="com.lingfeng.infrastructure.dao.po.AiAgent">
        UPDATE ai_agent
        <set>
            <if test="agentId != null and agentId != ''">
                agent_id = #{agentId},
            </if>
            <if test="agentName != null and agentName != ''">
                agent_name = #{agentName},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="channel != null">
                channel = #{channel},
            </if>
            <if test="strategy != null">
                strategy = #{strategy},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM ai_agent
        WHERE id = #{id}
    </select>

    <select id="selectByCondition" parameterType="com.lingfeng.infrastructure.dao.po.AiAgent" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM ai_agent
        <where>
            <if test="agentId != null and agentId != ''">
                AND agent_id = #{agentId}
            </if>
            <if test="agentName != null and agentName != ''">
                AND agent_name = #{agentName}
            </if>
            <if test="channel != null and channel != ''">
                AND channel = #{channel}
            </if>
            <if test="strategy != null and strategy != ''">
                AND strategy = #{strategy}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        LIMIT 1
    </select>

    <select id="selectList" parameterType="com.lingfeng.infrastructure.dao.po.AiAgent" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM ai_agent
        <where>
            <if test="agentId != null and agentId != ''">
                AND agent_id = #{agentId}
            </if>
            <if test="agentName != null and agentName != ''">
                AND agent_name LIKE CONCAT('%', #{agentName}, '%')
            </if>
            <if test="channel != null and channel != ''">
                AND channel = #{channel}
            </if>
            <if test="strategy != null and strategy != ''">
                AND strategy = #{strategy}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM ai_agent
        ORDER BY create_time DESC
    </select>

    <select id="count" parameterType="com.lingfeng.infrastructure.dao.po.AiAgent" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM ai_agent
        <where>
            <if test="agentId != null and agentId != ''">
                AND agent_id = #{agentId}
            </if>
            <if test="agentName != null and agentName != ''">
                AND agent_name LIKE CONCAT('%', #{agentName}, '%')
            </if>
            <if test="channel != null and channel != ''">
                AND channel = #{channel}
            </if>
            <if test="strategy != null and strategy != ''">
                AND strategy = #{strategy}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
    </select>

    <select id="queryByAgentId" resultType="com.lingfeng.infrastructure.dao.po.AiAgent">
        SELECT id, agent_id, client_id, client_name, client_type, sequence, step_prompt, create_time
        FROM ai_agent_flow_config
        WHERE agent_id = #{agentId}
        ORDER BY sequence ASC
    </select>

    <select id="queryEnabledAgents" resultType="com.lingfeng.infrastructure.dao.po.AiAgent">
        SELECT id, agent_id, agent_name, description, channel, strategy, status, create_time, update_time
        FROM ai_agent
        WHERE status = 1
        ORDER BY create_time DESC
    </select>

</mapper>